# Главная страница корневого раздела
DirectoryIndex index.php

Options -Indexes

<Files home.php>
Order Allow,Deny
Deny from all
</Files>

<IfModule mod_rewrite.c>
# Активация
RewriteEngine On
# Условие
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
# Правило
RewriteRule ^(.*)$ /project/simple_link/redirect.php
</IfModule>
